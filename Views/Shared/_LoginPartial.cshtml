@if (Request.IsAuthenticated) {
    <text>

       <li>  @Html.ActionLink(User.Identity.Name, "Manage", "Admin", routeValues: null, htmlAttributes: new { @class = "username", title = "Manage" })</li>
        @using (Html.BeginForm("LogOff", "Admin", FormMethod.Post, new { id = "logoutForm" })){
            @Html.AntiForgeryToken()
           <li> <a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        }
    </text>
} else {
    <ul>
        <li>@Html.ActionLink("Signup", "Signup", "Admin", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Admin", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
